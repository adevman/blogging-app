<%- include('partials/header'); -%>
<div class="ui main container segment marginFromNav">
    <div class="ui huge header">
        <%= blog.title %>
    </div>
    <div class="ui top attached">
        <div class="item">
            <img class="ui centered rounded image" src="<%= blog.image %>" alt="blogImage">
            <div class="content">
                <p>Created On: <%= blog.created.toDateString() %></p>

            </div>
            <div class="description">
                <p><%- blog.body %></p>
            </div>
            <div>
                <a href="/blogs/<%= blog._id %>/edit" class="ui button orange basic">Edit</a>
                <form action="/blogs/<%= blog._id %>?_method=DELETE" method="POST" style="display: inline;">
                <button type="submit" class="ui button red basic">Delete</button>
            </form>
            </div>
        </div>
    </div>
</div>
<%- include('partials/footer'); -%>